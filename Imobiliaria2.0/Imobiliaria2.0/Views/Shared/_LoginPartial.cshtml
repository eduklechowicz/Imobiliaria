@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Bem-Vindo " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li>@Html.ActionLink("Criar Conta", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Logoff</a></li>
        </ul>


        <ul class="nav navbar-nav">
            <li class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" style="background-color:transparent; border:none">
                    Propriedade
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                    <li>@Html.ActionLink("Cadastro Propriedade", "Create", "Propriedades")</li>

                    @*<li>@Html.ActionLink("Editar Propriedade", "Edit", "Propriedades")</li>

                    <li>@Html.ActionLink("Excluir Propriedade", "Delete", "Propriedades")</li>*@

                    <li>@Html.ActionLink("Detalhe Propriedade", "Index", "Propriedades")</li>

                    <li>@Html.ActionLink("Lista de Propriedade", "Index", "Propriedades")</li>

                </ul>
            </li>

            <li class="dropdown">
                <button class="btn btn-default dropdown-toggle" style="background-color:transparent; border:none" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Cliente
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                    <li>@Html.ActionLink("Cadastro Cliente", "Create", "Clientes")</li>

                    @*<li>@Html.ActionLink("Editar Cliente", "Edit", "Clientes")</li>

                    <li>@Html.ActionLink("Excluir Cliente", "Delete", "Clientes")</li>

                    <li>@Html.ActionLink("Detalhe Cliente", "Index", "Clientes")</li>*@

                    <li>@Html.ActionLink("Lista de Cliente", "Index", "Clientes")</li>
                </ul>
            </li>

            <li class="dropdown">
                <button class="btn btn-default dropdown-toggle"  style="background-color:transparent; border:none" type="button" id="dropdownMenu3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Proprietario
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu3">
                    <li>@Html.ActionLink("Cadastro Proprietario", "Create", "Proprietarios")</li>

                    <li>@Html.ActionLink("Editar Proprietario", "Edit", "Proprietarios")</li>

                    <li>@Html.ActionLink("Excluir Proprietario", "Delete", "Proprietarios")</li>

                    <li>@Html.ActionLink("Lista de Proprietario", "Index", "Proprietarios")</li>
                </ul>
            </li>
        </ul>

    }
}
else
{
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
        <li>@Html.ActionLink("Sobre", "About", "Home")</li>
        <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
        <li>@Html.ActionLink("Lista de Propriedades", "Index", "Propriedades")</li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
